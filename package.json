{
  "name": "currency-converted-data",
  "version": "1.0.0",
  "description": "TypeScript package providing daily updated currency conversion rates",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --apply .",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "test": "jest"
  },
  "keywords": [
    "currency",
    "conversion",
    "exchange-rate",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Andrew-Chen-Wang/currency-converted-data-nodejs.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/axios": "^0.14.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.17",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "biome check --apply",
      "biome format --write"
    ]
  },
  "dependencies": {
    "axios": "^1.7.8"
  }
}
